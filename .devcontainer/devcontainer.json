{
	"name": "RStudio Server",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "4.4" }
	},

	// Install Dev Container Features. More info: https://containers.dev/features
	"features": {
		"ghcr.io/rocker-org/devcontainer-features/quarto-cli:1.1.2": {
      "version": "1.5"
    },
		"ghcr.io/rocker-org/devcontainer-features/r-rig:1.2.4": {
			"version": "4.4",
			"installJupyterlab": true
		}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				// Add Jupyter and Python vscode extensions
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-renderers",
				"ms-python.python",
				"ms-python.vscode-pylance",
        "eamodio.gitlens"
			]
		}
	},

	// Forward Jupyter and RStudio ports
	"forwardPorts": [8787, 8888],
	"portsAttributes": {
		"8787": {
			"label": "Rstudio",
			"requireLocalPort": true,
			"onAutoForward": "ignore"
		},
		"8888": {
			"label": "Jupyter",
			"requireLocalPort": true,
			"onAutoForward": "ignore"
		}
	},

	// Use 'postAttachCommand' to run commands after the container is started.
	"postAttachCommand": "sudo rstudio-server start"
}
